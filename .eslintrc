
{
  "parser": "babel-eslint",
  "settings": {
    "import/resolver": {
      "babel-module": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "strict": 0,
    "linebreak-style": "off",
    "comma-dangle": [
      0
    ],
    "space-before-function-paren": 0,
    "arrow-parens": ["error", "as-needed"],
    "no-plusplus": 0,
    "no-lonely-if": 0,
    "max-len": 0,
    "no-continue": 0,
    "spaced-comment": 0,
    "no-await-in-loop": 0,
    "one-var-declaration-per-line": ["error", "initializations"],
    "one-var": 0,
    "no-shadow": [2, {"allow": ["err", "error"]}],
    "function-paren-newline": ["error", "consistent"],
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "arrow-body-style": ["error", "as-needed"],
    "quotes": ["error", "single"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "camelcase": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ]
}
